<resources>

    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">@bool/lightStatusBar</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/CustomToolbar</item>
        <item name="android:statusBarColor">#00FFFFFF</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <style name="LoginActivityTheme" parent="MyTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/loginColorStatusBar</item>
        <item name="android:navigationBarColor">@color/loginColorStatusBar</item>
    </style>

    <style name="MenuActivityTheme" parent="MyTheme">
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <style name="CustomToolbar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/colorText</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/colorLightBlack</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/colorLightBlack</item>
        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorGreen</item>
    </style>

</resources>
